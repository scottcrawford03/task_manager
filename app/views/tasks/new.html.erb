<h1>Create a New Task</h1>
<%= form_for :task, url: task_list_tasks_path do |f| %>
  Title: <%= f.text_field :title %><br>
  Description: <%= f.text_field :description %><br>
  Due Date: <%= f.date_field :due_date %><br>
  Upload File: <%= f.file_field :attachment, as: :file %>
  <%= f.hidden_field :task_list, value: @task_list.id %>
  <%= f.submit "Create Task" %>
<% end %>
