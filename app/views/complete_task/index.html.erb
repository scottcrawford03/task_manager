<h1>Completed Tasks </h1>
<% @tasks.each do |task| %>
  <div class="task" id=<%="#{task.id}"%>>
    <h3><%= "Task Number #{task.id}"%></h3>
    <p>Title: <%= task.title %></p>
    <p>Description: <%= task.description %></p>
    <p>Due Date: <%= task.due_date %></p><br>
    <p class="status">Status: <%= task.status%></p><br>
  </div>
<% end %>
