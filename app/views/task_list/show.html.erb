<h1>TaskList: <%= @task_list.title %></h1>
<%= button_to "Create Task", new_task_list_task_path(@task_list.id), method: :get %>
<% @task_list.tasks.each do |task| %>
  <div class="task" id=<%="#{task.id}"%>>
    <h3><%= "Task Number #{task.id}"%></h3>
    <p>Title: <%= task.title %></p>
    <p>Description: <%= task.description %></p>
    <p>Due Date: <%= task.due_date %></p><br>
    <p class="status">Status: <%= task.status%></p><br>
    <%= button_to "Edit Task", edit_task_list_task_path(@task_list.id, task), method: :get %>
    <button class="delete-task">
      Delete Task
    </button>
    <button class="complete-task">
      Complete Task
    </button>
  </div>
<% end %>
